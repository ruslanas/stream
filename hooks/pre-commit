#!/bin/sh

if sh vendor/bin/behat ; then
    cat <<\EOF
--------------------------------------------------------------------------------
Behat scenarios passed
--------------------------------------------------------------------------------
EOF
else
    cat <<\EOF
--------------------------------------------------------------------------------
One or more Behat scenarios failed. ABORTING!
--------------------------------------------------------------------------------
EOF
    exit 1
fi

if sh vendor/bin/phpunit --coverage-html report ; then
	cat <<\EOF
--------------------------------------------------------------------------------
All unit tests passed. Code coverage report generated.
--------------------------------------------------------------------------------
EOF
else
	cat <<\EOF
--------------------------------------------------------------------------------
Some unit tests failed. ABORTING!
--------------------------------------------------------------------------------
EOF
	exit 1
fi
