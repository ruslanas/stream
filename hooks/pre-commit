#!/bin/sh

if vendor/bin/behat --tags '@completed' ; then
    cat <<\EOF
--------------------------------------------------------------------------------
Behat scenarios passed
--------------------------------------------------------------------------------
EOF
else
    cat <<\EOF
--------------------------------------------------------------------------------
One or more Behat scenarios failed. ABORTING!
--------------------------------------------------------------------------------
EOF
    exit 1
fi

if vendor/bin/phpunit ; then
	cat <<\EOF
--------------------------------------------------------------------------------
All unit tests passed
--------------------------------------------------------------------------------
EOF
else
	cat <<\EOF
--------------------------------------------------------------------------------
Some unit tests failed. ABORTING!
--------------------------------------------------------------------------------
EOF
	exit 1
fi
